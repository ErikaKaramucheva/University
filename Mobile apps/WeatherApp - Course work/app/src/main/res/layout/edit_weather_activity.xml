<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EditWeatherActivity"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Промяна на  данните:"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_marginBottom="5dp">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:fillViewport="true"
        tools:ignore="MissingClass">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="150dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_city_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Град: "
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Град"
                    android:textColor="#000000"
                    android:textColorHint="#3C3F42"
                    android:textSize="17sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_country_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Държава: "
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Държава"
                    android:textColor="#000000"
                    android:textColorHint="#3C3F42"
                    android:textSize="17sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_time_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Дата: "
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Дата"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:textColorHint="#3C3F42" />
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_temp_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Температура: "
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Температура"
                android:textColor="#000000"
                android:textSize="19sp"
                android:textColorHint="#3C3F42" />
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_feels_like_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Усеща се като: "
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_feels_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Усеща се като"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:textColorHint="#3C3F42" />
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_description_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Описание: "
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Описание"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:textColorHint="#3C3F42" />
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_pressure_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Налягане: "
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Налягане"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:textColorHint="#3C3F42" />
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_humidity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Влажност: "
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_humidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Влажност"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:textColorHint="#3C3F42" />
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_cloud_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Облачност: "
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_cloud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Облачност"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:textColorHint="#3C3F42" />
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_wind_speed_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Вятър: "
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_wind_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Вятър"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:textColorHint="#3C3F42" />
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_snow_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Сняг: "
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_snow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Сняг"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textColorHint="#000000" />
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_rain_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Дъжд: "
                android:textColor="@color/white"
                android:textSize="17sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_rain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Дъжд"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:textColorHint="#3C3F42" />
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=""
            android:textSize="25sp"
            />
    </TableRow>


    </TableLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="80dp">

    <Button
        android:id="@+id/btn_save"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="50dp"
        android:text="Запази"
        android:background="#DF034E"
        android:layout_marginLeft="8dp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"

        android:background="#DF034E"
        android:text="Изтрий"
        android:textColor="@color/white" />
</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="120dp">

    <Button
        android:id="@+id/btn_history"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:text="Виж запазените данни"
        android:background="#DF034E"
        android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginStart="40dp"
            android:background="#DF034E"
            android:layout_marginTop="8dp"
            android:text="Начало"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>